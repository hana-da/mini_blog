.row.justify-content-center
  .col-6
    .jumbotron.users__profile
      %h1.mb-0.display-4.users__profile-username= @user.username
      %hr.my-0
      %dl.mt-4
        %dt Profile:
        %dd.users__profile-profile
          %p.lead= @user.profile
        %dt Blog:
        %dd.users__profile-blog_url= link_to(@user.blog_url, @user.blog_url)
      %hr.mb-0
      %ul.list-inline
        %li.list-inline-item.badge.badge-pill.badge-info
          %span.users__following-count= @user.following.count
          %span.users__following= t('.following')
        %li.list-inline-item.badge.badge-pill.badge-info
          %span.users__followers-count= @user.followers.count
          %span.users__followers= t('.followers')
